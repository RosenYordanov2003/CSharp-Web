@model ProductViewModel
@{
    ViewData["Title"] = $"Product Number: {Model.Id}";
}
<di class="card">
    <p class="card-header">@ViewData["Title"]</p>
    <div class="card-body">
        <h5 class="card-title">Product Name: @Model.Name</h5>
        <p class="card-text">Price: @string.Format($"{Model.Price:F2}") lv.</p>
    </div>
</di>
